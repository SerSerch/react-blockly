{
  "name": "react-blockly",
  "private": true,
  "description": "A React Blockly visual programming editor.",
  "author": "SerSerch <serserchit@gmail.com> (https://github.com/SerSerch)",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">= 18.0.0"
  },
  "scripts": {
    "test": "echo test",
    "lint": "eslint \"./packages/**/src/**/*.{js,jsx,ts,tsx}\""
  },
  "devDependencies": {
    "@blockly/eslint-config": "^3.0.2",
    "@evilmartians/lefthook": "^1.5.2",
    "@react-native/eslint-config": "^0.72.2",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "^0.72.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "blockly": "^10.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^28.1.1",
    "lerna": "^7.4.2",
    "prettier": "^3.1.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "0.72.6",
    "react-native-builder-bob": "^0.20.0",
    "react-scripts": "^5.0.1",
    "sharp-cli": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-reanimated)/)"
    ],
    "moduleNameMapper": {
      "@react-blockly/([^/]+)": "<rootDir>/packages/$1/src"
    },
    "prettierPath": null,
    "preset": "react-native"
  }
}
